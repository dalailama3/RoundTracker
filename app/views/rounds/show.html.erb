<table>
  <tr>
    <th>Date</th>
    <th>Course</th>
    <th>Score</th>
    <th>Par</th>
  </tr>

  <tr>
    <td><%= @round.date %></td>
    <td><%= @round.course.name %></td>
    <td><%= @round.score %></td>
    
  </tr>

</table>

<br>

<table border="3px solid">
  <tr>
    <td>Par for each hole</td>

    <% @round.course.par_hash.each do |key, val| %>
      <td><%= val %></td>
    <% end %>
  </tr>
  <tr>
    <td>Score for each hole</td>
    <% @round.score_hash.each do |key, val| %>
      <td><%= val %></td>
    <% end %>
  </tr>

  <tr>
    <td>Differentials</td>
    <% @diffs.each do |diff| %>
      <td><%= diff %></td>
    <% end %>
  </tr>

</table>
