<!DOCTYPE html>
<nav class="navbar navbar-default">
  <ul class="nav nav-pills">
    <li><a href="#">Rounds</a></li>
    <li><a href="#courses">Courses</a></li>
    <li><a href="#users">Find Friends</a></li>

    <div class="nav-right">
      <div class="pull-right">
        <% if logged_in? %>
          <li><%= link_to "Sign Out", session_url, method: :delete %></li>

        <% else %>
          <li><%= link_to "Sign In", new_session_url %></li>
          <li><%= link_to "Sign Up", new_user_url %></li>
        <% end %>

      </div>
    </div>

  </ul>
</nav>
<html>
<head>
  <title>RoundTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= yield %>
  </div>
  <% if logged_in? %>
    <div id="user"><%= current_user.id %></div>
    <div id="user-email"><%= current_user.email %></div>
  <% end %>

</body>
</html>
