<!DOCTYPE html>
<% if logged_in? %>
  <header class="golf-banner"></header>
  <nav class="navbar navbar-default">
    <ul class="nav nav-pills">

      <li><a href="#rounds">Rounds</a></li>
      <li><a href="#courses">Courses</a></li>
      <li><a href="#users">Find Friends</a></li>


    <div class="nav-right">
      <div class="pull-right">
        <li><p class="navbar-text">Signed in as <%= current_user.email %></p></li>
        <li class="nav-signout"><%= link_to "Sign Out", session_url, method: :delete %></li>
      </div>
    </div>

    </ul>
  </nav>
<% end %>
<html>

<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
